<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.svenfulenchek_wguscheduler">

    <application
        android:title="Scheduler"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SvenFulenchek_WGUScheduler">
        <receiver
            android:name=".ui.AcademicProgress.appBroadcastReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.AcademicProgress.Instructors.InstructorEditor"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Instructors.InstructorView"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Notes.NotesEditor"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Notes.NotesView"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Assessments.AssessmentEditor"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Courses.CourseView"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Courses.CourseEditor"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Terms.TermView"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Terms.TermEditor"
            android:exported="false" />
        <activity
            android:name=".ui.AcademicProgress.Assessments.AssessmentView"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.AcademicProgress.Terms.TermsList"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>