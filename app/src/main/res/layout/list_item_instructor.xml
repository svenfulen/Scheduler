<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_instructor"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/layout_border">

    <ImageView
        android:id="@+id/contact_placeholder"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_contact_placeholder" />

    <TextView
        android:id="@+id/instructorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="instructorName"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/contact_placeholder"
        app:layout_constraintTop_toTopOf="@+id/contact_placeholder" />

    <TextView
        android:id="@+id/instructorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="instructorPhone"
        app:layout_constraintStart_toEndOf="@+id/contact_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/instructorName" />

    <TextView
        android:id="@+id/instructorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="instructorEmail"
        app:layout_constraintStart_toEndOf="@+id/contact_placeholder"
        app:layout_constraintTop_toBottomOf="@+id/instructorPhone" />

    <ImageButton
        android:id="@+id/editInstructorButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#838383"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit"
        app:tint="#232323" />
</androidx.constraintlayout.widget.ConstraintLayout>